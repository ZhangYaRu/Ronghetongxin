<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

            <LinearLayout
                style="@style/layout_bg"
                android:layout_marginTop="@dimen/layout_twenty_five">

                <ImageView
                    android:layout_width="@dimen/layout_twenty_eight"
                    android:layout_height="@dimen/layout_twenty_eight"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/layout_fifteen"
                    android:src="@drawable/user_name" />

                <EditText
                    android:id="@+id/et_phone_number"
                    style="@style/login_edit_style"
                    android:layout_marginLeft="@dimen/layout_fifteen"
                    android:hint="@string/login_account"
                    android:inputType="phone"
                    android:text="13520854072" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_bg"
                android:layout_marginTop="@dimen/layout_twenty_five">

                <ImageView
                    android:layout_width="@dimen/layout_twenty_eight"
                    android:layout_height="@dimen/layout_twenty_eight"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/layout_fifteen"
                    android:src="@drawable/user_name" />

                <EditText
                    android:id="@+id/et_idcard_number"
                    style="@style/login_edit_style"
                    android:layout_marginLeft="@dimen/layout_fifteen"
                    android:hint="@string/register_id_card"
                    android:inputType="number"
                    android:text="152826199212060058" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_bg"
                android:layout_marginTop="15dip">

                <ImageView
                    android:layout_width="@dimen/layout_twenty_eight"
                    android:layout_height="@dimen/layout_twenty_eight"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/layout_fifteen"
                    android:src="@drawable/user_name" />

                <EditText
                    android:id="@+id/et_nick_name"
                    style="@style/login_edit_style"
                    android:layout_marginLeft="@dimen/layout_fifteen"
                    android:hint="@string/register_rally_name"
                    android:maxLength="20"
                    android:text="暖冬" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_bg"
                android:layout_marginTop="15dip">

                <ImageView
                    android:layout_width="@dimen/layout_twenty_eight"
                    android:layout_height="@dimen/layout_twenty_eight"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/layout_fifteen"
                    android:src="@drawable/password1" />

                <EditText
                    android:id="@+id/et_password"
                    style="@style/login_edit_style"
                    android:layout_marginLeft="@dimen/layout_fifteen"
                    android:hint="@string/set_password_hint"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:numeric="integer"
                    android:text="123456" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_bg"
                android:layout_marginTop="15dip">

                <ImageView
                    android:layout_width="@dimen/layout_twenty_eight"
                    android:layout_height="@dimen/layout_twenty_eight"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/layout_fifteen"
                    android:src="@drawable/password1" />

                <EditText
                    android:id="@+id/et_confirmpassword"
                    style="@style/login_edit_style"
                    android:layout_marginLeft="@dimen/layout_fifteen"
                    android:hint="@string/confirm_password_hint"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:numeric="integer"
                    android:text="123456" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_register_ok"
                style="@style/button_bg"
                android:layout_marginTop="@dimen/layout_twenty_five"
                android:text="@string/confirm" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>