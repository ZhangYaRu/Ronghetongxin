<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhbd.beidoucommunication">

    <!-- 允许应用程序改变网络状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <!-- 允许应用程序改变WIFI连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <!-- 允许应用程序访问有关的网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 允许应用程序访问WIFI网卡的网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- 允许应用程序完全使用网络 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 电话号码相关 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />


                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".base.TitlebarActivity" />
        <activity
            android:name=".ui.activity.WelcomeActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.MAIN" />-->

            <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>
        <activity android:name=".ui.activity.LoginActivity" />
        <activity android:name=".ui.activity.RegistActivity" />
        <activity android:name=".ui.activity.ForgetPassActivity" />

        <!-- 用于接收消息和发送系统自检信息的服务 -->
        <service
            android:name=".service.GlobalService"
            android:label="QServer"
            android:persistent="true">
            <intent-filter>
                <action android:name="com.zhbd.beidoucommunication.service.GlobalService" />
            </intent-filter>
        </service>

        <activity android:name=".ui.activity.FriendDetailsActivity" />
        <activity
            android:name=".ui.activity.ChatMessageActivity"
            android:windowSoftInputMode="adjustResize">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity android:name=".ui.activity.AddFriendsActivity" />
        <activity android:name=".ui.activity.BuildGroupActivity" />
        <activity
            android:name=".ui.activity.SendSmsActivity"
            android:windowSoftInputMode="adjustResize"></activity>
        <activity android:name=".ui.activity.SendEmailActivity"></activity>
        <activity android:name=".ui.activity.ShowEmailActivity"></activity>
    </application>

</manifest>