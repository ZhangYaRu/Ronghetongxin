<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/search_list_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout style="@style/friend_details_item_bg_no_arrow">

            <TextView
                android:id="@+id/friend_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="超级无敌美少女"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_eithteen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/friend_name"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_id_title"
                    android:textColor="@color/message_list_msg_text_color"
                    android:textSize="@dimen/textsize_fourteen" />

                <TextView
                    android:id="@+id/friend_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_five"
                    android:text="123456"
                    android:textColor="@color/message_list_msg_text_color"
                    android:textSize="@dimen/textsize_fourteen" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_set_ramark"
            style="@style/friend_details_item_bg_have_arrow"
            android:text="@string/set_remark"
            android:textColor="@color/black" />

        <LinearLayout
            style="@style/friend_details_item_bg_no_arrow"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                style="@style/friend_details_item_text"
                android:layout_width="@dimen/layout_zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/phone_number" />

            <TextView
                android:id="@+id/friend_phone_number"
                style="@style/friend_details_item_text"
                android:layout_width="@dimen/layout_zero"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="159 3521 4528" />

        </LinearLayout>

        <LinearLayout
            style="@style/friend_details_item_bg_no_arrow"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                style="@style/friend_details_item_text"
                android:layout_width="@dimen/layout_zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/id_card" />

            <TextView
                android:id="@+id/friend_id_card"
                style="@style/friend_details_item_text"
                android:layout_width="@dimen/layout_zero"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="156854965281575426" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_friend_send_message"
            style="@style/friend_details_btn_style"
            android:background="@drawable/friend_send_message_button_bg_selector"
            android:text="@string/send_message"
            android:textColor="@drawable/friend_details_button_text_selector" />

        <Button
            android:id="@+id/btn_friend_del"
            style="@style/friend_details_btn_style"
            android:background="@drawable/del_button_bg_selector"
            android:text="@string/delet"
            android:textColor="@drawable/friend_details_button_text_selector" />
    </LinearLayout>
</ScrollView>
