<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mine_fragment_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_twenty"
        android:background="@color/trans" />

    <include
        android:id="@+id/view_reset_pwd"
        layout="@layout/layout_setting_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_twenty"
        android:background="@color/trans" />

    <include
        android:id="@+id/view_setting"
        layout="@layout/layout_setting_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_twenty"
        android:background="@color/trans" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_one_half"
        android:background="@drawable/login_line" />

    <TextView
        android:id="@+id/tv_exit_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_forty"
        android:background="@drawable/setting_item_bg_selector"
        android:gravity="center"
        android:text="@string/exit_login"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_one_half"
        android:background="@drawable/login_line" />
</LinearLayout>