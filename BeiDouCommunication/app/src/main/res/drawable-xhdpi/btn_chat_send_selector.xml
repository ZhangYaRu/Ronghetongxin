<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/main_color" />
            <corners android:radius="@dimen/layout_eight"/>
            <stroke
                android:width="@dimen/layout_one"
                android:color="@color/send_message_btn_stroke_col" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/button_color_down" />
            <corners android:radius="@dimen/layout_eight"/>
            <stroke
                android:width="@dimen/layout_one"
                android:color="@color/send_message_btn_stroke_col" />
        </shape>
    </item>

</selector>