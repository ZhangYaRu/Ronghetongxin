<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">
<!--
    android:background="@drawable/custom_dialog_top"
-->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingTop="30dip"
        android:text="@string/warn_prompt"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingLeft="40dp"
        android:background="@color/white"
        android:visibility="gone"/>
<!--        android:background="@drawable/custom_dialog_bottom"
-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/white"
        android:padding="20dip">

<!--            style="@style/myProgressBarStyleLarge"-->
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:indeterminateTint="@color/title_bar_color"
            />
        <ImageView
            android:id="@+id/complete_image"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/dialog_complete"
            android:visibility="gone" />

        <TextView
            android:id="@+id/warn_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/downloading"
            android:textColor="#646464"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

</LinearLayout>