<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mine_fragment_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_personal_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_eighty"
        android:background="@color/main_color"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/layout_twenty"
        android:paddingRight="@dimen/layout_twenty">

        <ImageView
            android:id="@+id/iv_my_head_icon"
            android:layout_width="@dimen/layout_fifty"
            android:layout_height="@dimen/layout_fifty"
            android:layout_centerVertical="true"
            android:src="@drawable/default_useravatar" />


        <ImageView
            android:id="@+id/iv_next_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/next_arrow_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_ten"
            android:layout_toLeftOf="@id/iv_next_arrow"
            android:layout_toRightOf="@id/iv_my_head_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_my_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="230626"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_eithteen"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_five"
                android:text="个人信息"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_fourteen" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_twenty"
        android:background="@color/trans" />

    <include
        android:id="@+id/view_hardware_state"
        layout="@layout/layout_setting_item_no_arrow" />

    <include
        android:id="@+id/view_signal_strength"
        layout="@layout/layout_setting_item" />

    <include
        android:id="@+id/view_ic_info"
        layout="@layout/layout_setting_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_twenty"
        android:background="@color/trans" />

    <include
        android:id="@+id/view_voucher"
        layout="@layout/layout_setting_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_twenty"
        android:background="@color/trans" />

    <include
        android:id="@+id/view_about_us"
        layout="@layout/layout_setting_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_twenty"
        android:background="@color/trans" />

    <include
        android:id="@+id/view_setting"
        layout="@layout/layout_setting_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_twenty"
        android:background="@color/trans" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_one_half"
        android:background="@drawable/login_line" />

    <TextView
        android:id="@+id/tv_exit_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_fifty"
        android:background="@drawable/setting_item_bg_selector"
        android:gravity="center"
        android:text="@string/exit_login"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_one_half"
        android:background="@drawable/login_line" />
</LinearLayout>