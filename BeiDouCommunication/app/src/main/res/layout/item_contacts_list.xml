<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/layout_five"
        android:paddingLeft="@dimen/layout_eight"
        android:paddingTop="@dimen/layout_five"
        android:text="A"
        android:textColor="@color/message_list_msg_text_color"
        android:textSize="@dimen/textsize_twelve" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_contacts_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/friend_list_item_name_bg_selector"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:padding="@dimen/layout_ten"
            android:text="宋江"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_eithteen" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_one"
            android:background="@color/message_list_divider_color" />
    </LinearLayout>

</LinearLayout>