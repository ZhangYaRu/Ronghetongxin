<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_fifteen"
    android:background="@drawable/radius_bg"
    android:orientation="vertical"
    android:padding="@dimen/layout_fifteen">

    <TextView
        android:id="@+id/tv_ic_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="230626"
        android:textColor="@color/black"
        android:textSize="@dimen/layout_twenty_eight"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_ten">

        <TextView
            android:layout_width="@dimen/layout_zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="入站状态:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_is_control"
            android:layout_width="@dimen/layout_zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="非抑制"
            android:textColor="@color/text_color_hint" />

        <TextView
            android:id="@+id/tv_is_quiesce"
            android:layout_width="@dimen/layout_zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="静默"
            android:textColor="@color/text_color_hint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_five">

        <TextView
            android:layout_width="@dimen/layout_zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="服务频度:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_service_frequency"
            android:layout_width="@dimen/layout_zero"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="60s"
            android:textColor="@color/text_color_hint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_five">

        <TextView
            android:layout_width="@dimen/layout_zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="通信等级:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="@dimen/layout_zero"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="3"
            android:textColor="@color/text_color_hint" />

    </LinearLayout>
</LinearLayout>