<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--<style name="AppTheme" parent="Theme.AppCompat.NoActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--登录页面有关-->
    <style name="layout_bg">
        <item name="android:background">@drawable/login_layout_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/layout_fifty</item>
        <item name="android:paddingTop">@dimen/layout_five</item>
        <item name="android:paddingBottom">@dimen/layout_five</item>
        <item name="android:layout_marginRight">@dimen/layout_twenty</item>
        <item name="android:layout_marginLeft">@dimen/layout_twenty</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!--登录按钮背景样式-->
    <style name="button_bg">
        <item name="android:background">@drawable/button_btn_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--登录输入框样式-->
    <style name="login_edit_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">18</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:textSize">@dimen/textsize_sixteen</item>
    </style>
    <!--单选按钮样式-->
    <style name="main_radio_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_twelve</item>
        <item name="android:textColor">@drawable/main_fragment_bottom_text_color_selector</item>

    </style>
    <!--搜索输入框样式-->
    <style name="search_eidttext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_thirty</item>
        <item name="android:background">@drawable/search_edittext_bg</item>
        <item name="android:layout_margin">@dimen/layout_ten</item>
        <item name="android:hint">@string/search</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_twelve</item>
        <item name="android:textColorHint">@color/message_list_msg_text_color</item>
    </style>

    <!--好友详细信息界面条目背景带箭头-->
    <style name="friend_details_item_bg_have_arrow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/friend_details_item_bg_normal_shape</item>
        <item name="android:layout_marginBottom">@dimen/layout_ten</item>
        <item name="android:drawableRight">@drawable/next_arrow</item>
        <item name="android:padding">@dimen/layout_fifteen</item>
    </style>
    <!--好友详细信息界面条目背景不带箭头-->
    <style name="friend_details_item_bg_no_arrow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/friend_details_item_bg_normal_shape</item>
        <item name="android:layout_marginBottom">@dimen/layout_ten</item>
        <item name="android:padding">@dimen/layout_fifteen</item>
    </style>
    <!--好友资料详情文本样式-->
    <style name="friend_details_item_text">
        <item name="android:textSize">@dimen/textsize_sixteen</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--好友资料详情按钮样式-->
    <style name="friend_details_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/layout_five</item>
        <item name="android:paddingTop">@dimen/layout_five</item>
        <item name="android:textSize">@dimen/textsize_eithteen</item>
        <item name="android:layout_marginLeft">@dimen/layout_ten</item>
        <item name="android:layout_marginRight">@dimen/layout_ten</item>
        <item name="android:layout_marginTop">@dimen/layout_ten</item>
    </style>

    <!--聊天界面日期文字样式-->
    <style name="chat_text_date_style">
        <item name="android:padding">@dimen/layout_two</item>
        <item name="android:paddingTop">@dimen/layout_two</item>
        <item name="android:paddingBottom">@dimen/layout_two</item>
        <item name="android:paddingLeft">@dimen/layout_twelve</item>
        <item name="android:paddingRight">@dimen/layout_twelve</item>
        <item name="android:textColor">@color/date_text_col</item>
        <item name="android:textSize">@dimen/textsize_twelve</item>
        <item name="android:background">@drawable/chat_time_bg_shape</item>
    </style>

    <!--聊天界面姓名文字样式-->
    <style name="chat_text_name_style">
        <item name="android:textColor">@color/name_text_col</item>
        <item name="android:textSize">@dimen/textsize_fourteen</item>
        <item name="android:gravity">center</item>
    </style>

    <!--聊天内容文字样式-->
    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <!--popupwindow动画-->
    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!--退出登录popupwindow动画-->
    <style name="exit_login_popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_show_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/popup_hidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!--录音的dialog样式-->
    <style name="Theme_AndioDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--修改密码输入框外布局样式-->
    <style name="edit_layout_bg">
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/layout_fifty</item>
        <item name="android:paddingTop">@dimen/layout_five</item>
        <item name="android:paddingBottom">@dimen/layout_five</item>
        <item name="android:layout_marginRight">@dimen/layout_twenty</item>
        <item name="android:layout_marginLeft">@dimen/layout_twenty</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 修改密码输入框和文本框样式 -->
    <style name="edit_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>
